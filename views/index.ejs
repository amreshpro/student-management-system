<%- include("./partials/header.ejs") %>
    



<div class="container">

<div class="row">
    <div class="col-sm-6 mt-5">
        <h3 class="alert alert-success text-center">Add New Student</h3>


<form method="post" class="">

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" name="name" id="name" required>
    </div>

    <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="text" class="form-control" name="age" id="age" required>
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Fee</label>
        <input type="number" class="form-control" name="fees" id="fees" required>
    </div>
<button class="btn btn-primary" type="submit">Submit</button>
</form>

    </div>

    <div class="col-sm-6 mt-5">
        <h3 class=" alert alert-warning text-center">List of Student Student</h3>


<%# Show All Data %>
<table class="table table-striped table-hover bg-form">
    <thead>
        <tr>
            <th scope="col">No</th>

            <th scope="col">Name</th>

            <th scope="col">Age</th>

            <th scope="col">Fee</th>

            <th scope="col">Action</th>

        </tr>
    </thead>

<tbody>

  

<%  data.forEach((item,index)=>{ %>

    <tr>
        <td><%= index+1 %></td>
        <td><%= item.name %></td>
        <td><%= item.age %></td>
        <td><%= item.fees %></td>
        <td class="span">
        <form action="/student/edit/<%= item._id %>" method="get" class="d-inline">
            <button type="submit" class="btn">    <i class="fas fa-pen-square text-info"></i></button>
        </form>
            &nbsp;&nbsp;
            <form action="/student/delete/<%= item._id %>" method="post" class="d-inline">
                <button type="submit" class="btn">   <i class="fas fa-trash text-danger"></i></button>
            </form>
           
        </td>
    </tr>



<% })%>


</tbody>

</table>

    </div>
</div>

</div>



    <%- include('./partials/footer.ejs')%>
